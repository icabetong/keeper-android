<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/activity_margin"
        android:text="@string/activity_result"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Keeper.Header.Component"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/brand_shimmer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_stock_number"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_round_numbers_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stockNumberTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="MacBook Air M1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_asset_description"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_round_desktop_windows_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/assetNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="MacBook Air M1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_category"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_outline_devices_other_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/typeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="Under Maintenance"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_subcategory"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_outline_category_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/classificationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="Laptops"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_unit_of_measure"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_round_square_foot_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/unitOfMeasureTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="Ream"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_unit_value"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_round_attach_money_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/unitValueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="$ 79.99"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/findUsagesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:text="@string/button_find_usages"
                app:icon="@drawable/ic_round_chevron_right_24"
                app:iconGravity="end"
                style="@style/Widget.Keeper.Button.Outlined"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            android:id="@+id/decodeErrorView"
            layout="@layout/layout_error_decode"/>

        <include
            android:id="@+id/emptyView"
            layout="@layout/layout_empty_scan"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>