<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/activity_margin"
        android:text="@string/activity_result"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Keeper.Header.Component"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/keeper_shimmer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_marginStart="@dimen/activity_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginBottom="@dimen/activity_margin_tiny"
                    android:layout_marginHorizontal="@dimen/activity_margin"
                    android:textAppearance="@style/TextAppearance.Keeper.Title.Emphasized"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/emailTextView"
                    app:layout_constraintStart_toEndOf="@id/profileImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Fedor von Bock"/>

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_marginHorizontal="@dimen/activity_margin"
                    android:textAppearance="@style/TextAppearance.Keeper.Body.Medium"
                    app:layout_constraintTop_toBottomOf="@id/userNameTextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/profileImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="vonbock.fedor@clsu2.edu.ph"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_asset_name"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_round_desktop_windows_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/assetNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="MacBook Air M1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_status"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_round_verified_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/assetStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="Under Maintenance"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_category"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_round_local_offer_24"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/brand_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/categoryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="Laptops"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            android:id="@+id/decodeErrorView"
            layout="@layout/layout_error_decode"/>

        <include
            android:id="@+id/emptyView"
            layout="@layout/layout_empty_scan"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>