<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/keeper_toolbar">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/headerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_margin"
            android:text="@string/activity_options"
            android:textAppearance="@style/TextAppearance.Keeper.Title.Emphasized"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_margin_huge"
            android:layout_marginEnd="@dimen/activity_margin_huge"
            android:padding="@dimen/activity_margin_small"
            android:text="@string/button_search"
            android:textColor="@color/keeper_text_primary"
            android:textAllCaps="false"
            android:letterSpacing="0"
            app:icon="@drawable/ic_hero_search"
            app:iconGravity="textTop"
            app:iconTint="@color/keeper_text_primary"
            app:layout_constraintTop_toBottomOf="@id/headerTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.Keeper.Button.Outlined"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/filterCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_small"
                android:layout_marginHorizontal="@dimen/activity_margin_small"
                android:text="@string/options_filter"
                android:textAppearance="@style/TextAppearance.Keeper.List"/>

            <LinearLayout
                android:id="@+id/filterOptionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_tiny"
                    android:layout_marginBottom="@dimen/activity_margin_tiny"
                    android:layout_marginHorizontal="@dimen/activity_margin_medium"
                    android:gravity="center_vertical"
                    android:text="@string/hint_asset"
                    android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                    android:drawableStart="@drawable/ic_hero_desktop_computer"
                    android:drawablePadding="@dimen/activity_margin_small"
                    android:drawableTint="@color/keeper_primary"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_margin_large">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/assetTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_margin"
                        android:text="@string/hint_not_set"
                        android:textColor="@color/keeper_text_primary"
                        android:textAppearance="@style/TextAppearance.Keeper.List"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/removeAssetChip"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/removeAssetChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_remove"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/assetTextView"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:layout_marginBottom="@dimen/activity_margin_tiny"
                    android:layout_marginHorizontal="@dimen/activity_margin_medium"
                    android:gravity="center_vertical"
                    android:text="@string/hint_user"
                    android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                    android:drawableStart="@drawable/ic_hero_user"
                    android:drawablePadding="@dimen/activity_margin_small"
                    android:drawableTint="@color/keeper_primary"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_margin_large">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/userTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_margin"
                        android:text="@string/hint_not_set"
                        android:textColor="@color/keeper_text_primary"
                        android:textAppearance="@style/TextAppearance.Keeper.List"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/removeUserChip"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/removeUserChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_remove"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userTextView"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/sortCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_small"
                android:layout_marginStart="@dimen/activity_margin_small"
                android:layout_marginEnd="@dimen/activity_margin_small"
                android:text="@string/options_sort"
                android:textAppearance="@style/TextAppearance.Keeper.List"/>

            <LinearLayout
                android:id="@+id/sortOptionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:layout_marginBottom="@dimen/activity_margin_tiny"
                    android:layout_marginHorizontal="@dimen/activity_margin_medium"
                    android:gravity="center_vertical"
                    android:text="@string/options_sort_attribute"
                    android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                    android:drawableStart="@drawable/ic_hero_hashtag"
                    android:drawablePadding="@dimen/activity_margin_small"
                    android:drawableTint="@color/keeper_primary"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_margin">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin"
                        android:text="@string/hint_asset_name"
                        android:textAppearance="@style/TextAppearance.Keeper.List"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin"
                        android:text="@string/hint_category"
                        android:textAppearance="@style/TextAppearance.Keeper.List"/>

                </RadioGroup>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:layout_marginBottom="@dimen/activity_margin_tiny"
                    android:layout_marginHorizontal="@dimen/activity_margin_medium"
                    android:gravity="center_vertical"
                    android:text="@string/options_sort_direction"
                    android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                    android:drawableStart="@drawable/ic_hero_sort_ascending"
                    android:drawablePadding="@dimen/activity_margin_small"
                    android:drawableTint="@color/keeper_primary"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_margin">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin"
                        android:text="@string/options_sort_direction_ascending"
                        android:textAppearance="@style/TextAppearance.Keeper.List"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin"
                        android:text="@string/options_sort_direction_descending"
                        android:textAppearance="@style/TextAppearance.Keeper.List"/>

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>