<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/headerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin"
                android:background="@color/keeper_toolbar"
                android:text="@string/activity_result"
                android:textAppearance="@style/TextAppearance.Keeper.Title.Emphasized"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_marginStart="@dimen/activity_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:layout_marginBottom="@dimen/activity_margin_tiny"
                    android:layout_marginHorizontal="@dimen/activity_margin"
                    android:textAppearance="@style/TextAppearance.Keeper.Title.Emphasized"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/emailTextView"
                    app:layout_constraintStart_toEndOf="@id/profileImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Fedor von Bock"/>

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_marginHorizontal="@dimen/activity_margin"
                    android:textAppearance="@style/TextAppearance.Keeper.Body.Medium"
                    app:layout_constraintTop_toBottomOf="@id/userNameTextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/profileImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="vonbock.fedor@clsu2.edu.ph"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_asset_name"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_hero_desktop_computer"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/keeper_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/assetNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="MacBook Air M1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_status"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_hero_badge_check"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/keeper_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/assetStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="Under Maintenance"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin_tiny"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center_vertical"
                android:text="@string/hint_category"
                android:textAppearance="@style/TextAppearance.Keeper.Overline.Primary"
                android:drawableStart="@drawable/ic_hero_tag"
                android:drawablePadding="@dimen/activity_margin_small"
                android:drawableTint="@color/keeper_primary"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/categoryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginEnd="@dimen/activity_margin"
                android:textAppearance="@style/TextAppearance.Keeper.List.Title"
                tools:text="Laptops"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/decodeErrorView"
        layout="@layout/layout_error_decode"/>

    <include
        android:id="@+id/emptyView"
        layout="@layout/layout_empty_scan"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>