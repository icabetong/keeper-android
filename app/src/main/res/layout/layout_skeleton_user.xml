<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image1View"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/shape_item_skeleton_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/header1TextView"
            android:layout_width="@dimen/skeleton_header_width_1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_tiny"
            android:layout_marginStart="@dimen/activity_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@drawable/shape_item_skeleton"
            android:textAppearance="@style/TextAppearance.Keeper.List.Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/information1TextView"
            app:layout_constraintStart_toEndOf="@id/image1View"/>

        <TextView
            android:id="@+id/information1TextView"
            android:layout_width="@dimen/skeleton_summary_width_1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@drawable/shape_item_skeleton"
            app:layout_constraintTop_toBottomOf="@id/header1TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image1View"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

