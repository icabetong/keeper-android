<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/navigation_auth">

    <fragment
        android:id="@+id/navigation_auth"
        android:name="io.capstone.keeper.features.auth.AuthFragment"
        tools:layout="@layout/fragment_auth"/>
    <fragment
        android:id="@+id/navigation_root"
        android:name="io.capstone.keeper.features.core.fragment.RootFragment"
        tools:layout="@layout/fragment_root"/>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="io.capstone.keeper.features.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/navigation_settings"
        android:name="io.capstone.keeper.features.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings"/>
    <!-- Support Fragments -->
    <fragment
        android:id="@+id/navigation_category"
        android:name="io.capstone.keeper.features.category.CategoryFragment"
        tools:layout="@layout/fragment_category"/>
    <fragment
        android:id="@+id/navigation_department"
        android:name="io.capstone.keeper.features.department.DepartmentFragment"
        tools:layout="@layout/fragment_department"/>
    <!-- Editor Fragments -->
    <fragment
        android:id="@+id/navigation_editor_asset"
        android:name="io.capstone.keeper.features.asset.editor.AssetEditorFragment"
        tools:layout="@layout/fragment_editor_asset"/>
    <fragment
        android:id="@+id/navigation_editor_user"
        android:name="io.capstone.keeper.features.user.editor.UserEditorFragment"
        tools:layout="@layout/fragment_editor_user"/>
    <fragment
        android:id="@+id/navigation_editor_department"
        android:name="io.capstone.keeper.features.department.editor.DepartmentEditorFragment"
        tools:layout="@layout/fragment_editor_department" />

    <action
        android:id="@+id/to_navigation_auth"
        app:destination="@id/navigation_auth"
        app:launchSingleTop="true"
        app:popUpTo="@+id/navigation_main"
        app:popUpToInclusive="true"/>
    <action
        android:id="@+id/to_navigation_root"
        app:destination="@id/navigation_root"
        app:launchSingleTop="true"
        app:popUpTo="@+id/navigation_main"
        app:popUpToInclusive="true"/>

    <!-- Other non-special actions -->
    <action
        android:id="@+id/to_navigation_settings"
        app:destination="@id/navigation_settings"/>
    <action
        android:id="@+id/to_navigation_profile"
        app:destination="@id/navigation_profile"/>
    <action
        android:id="@+id/to_navigation_category"
        app:destination="@id/navigation_category"/>
    <action
        android:id="@+id/to_navigation_department"
        app:destination="@id/navigation_department"/>
    <!-- Actions to editor fragments -->
    <action
        android:id="@+id/to_navigation_editor_asset"
        app:destination="@id/navigation_editor_asset"/>
    <action
        android:id="@+id/to_navigation_editor_user"
        app:destination="@id/navigation_editor_user"/>
    <action
        android:id="@+id/to_navigation_editor_department"
        app:destination="@id/navigation_editor_department"/>

</navigation>