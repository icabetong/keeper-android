<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/navigation_core_fragment">

    <fragment
        android:id="@+id/navigation_core_fragment"
        android:name="io.capstone.keeper.android.features.core.fragment.CoreFragment"
        tools:layout="@layout/fragment_core"/>

    <action
        android:id="@+id/to_navigation_core"
        app:destination="@id/navigation_core_fragment"/>

    <include app:graph="@navigation/navigation_core"/>

</navigation>