<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_core"
    app:startDestination="@id/navigation_user_home">

    <fragment
        android:id="@+id/navigation_user_home"
        android:name="io.capstone.ludendorff.features.home.HomeFragment"/>
    <fragment
        android:id="@+id/navigation_scan"
        android:name="io.capstone.ludendorff.features.scan.ScanFragment"/>
    <fragment
        android:id="@+id/navigation_assets"
        android:name="io.capstone.ludendorff.features.asset.AssetFragment"/>
    <fragment
        android:id="@+id/navigation_users"
        android:name="io.capstone.ludendorff.features.user.UserFragment"/>
    <fragment
        android:id="@+id/navigation_assignments"
        android:name="io.capstone.ludendorff.features.assignment.AssignmentFragment"/>

    <action
        android:id="@+id/to_navigation_user_home"
        app:destination="@id/navigation_user_home"/>
    <action
        android:id="@+id/to_navigation_scan"
        app:destination="@id/navigation_scan"/>
    <action
        android:id="@+id/to_navigation_assets"
        app:destination="@id/navigation_assets"/>
    <action
        android:id="@+id/to_navigation_users"
        app:destination="@id/navigation_users"/>
    <action
        android:id="@+id/to_navigation_assignments"
        app:destination="@id/navigation_assignments"/>

</navigation>