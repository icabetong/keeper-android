<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_core"
    app:startDestination="@id/navigation_assets">

    <fragment
        android:id="@+id/navigation_scan"
        android:name="io.capstone.ludendorff.features.scan.ScanFragment"/>
    <fragment
        android:id="@+id/navigation_assets"
        android:name="io.capstone.ludendorff.features.asset.AssetFragment"/>
    <fragment
        android:id="@+id/navigation_inventory"
        android:name="io.capstone.ludendorff.features.inventory.InventoryReportFragment"/>
    <fragment
        android:id="@+id/navigation_issued"
        android:name="io.capstone.ludendorff.features.issued.IssuedReportFragment"/>
    <fragment
        android:id="@+id/navigation_stock_card"
        android:name="io.capstone.ludendorff.features.stockcard.StockCardFragment"/>
    <fragment
        android:id="@+id/navigation_audit_logs"
        android:name="io.capstone.ludendorff.features.audit.AuditLogsFragment"/>
    <fragment
        android:id="@+id/navigation_users"
        android:name="io.capstone.ludendorff.features.user.UserFragment"/>

    <action
        android:id="@+id/to_navigation_scan"
        app:destination="@id/navigation_scan"/>
    <action
        android:id="@+id/to_navigation_assets"
        app:destination="@id/navigation_assets"/>
    <action
        android:id="@+id/to_navigation_inventory"
        app:destination="@id/navigation_inventory"/>
    <action
        android:id="@+id/to_navigation_issued"
        app:destination="@id/navigation_issued"/>
    <action
        android:id="@+id/to_navigation_stock_card"
        app:destination="@id/navigation_stock_card"/>
    <action
        android:id="@+id/to_navigation_users"
        app:destination="@id/navigation_users"/>

</navigation>